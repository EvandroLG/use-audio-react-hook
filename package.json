{
  "name": "react-use-audio",
  "version": "1.0.0",
  "description": "A React hook for playing audio files.",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "modern": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build-only": "rm -rf dist && microbundle --jsx React.createElement --tsconfig tsconfig.json",
    "build": "npm run test && npm run build-only && npm run size",
    "size": "npm run build-only && size-limit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "audio",
    "react",
    "hook",
    "useAudio"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle": "^0.15.1",
    "prettier": "^3.3.3",
    "size-limit": "^11.1.6",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-audio": "^0.7.4"
  },
  "size-limit": [
    {
      "path": "dist/index.cjs",
      "limit": "4 kB"
    },
    {
      "path": "dist/index.module.js",
      "limit": "3.7 kB"
    },
    {
      "path": "dist/index.umd.js",
      "limit": "4 kB"
    },
    {
      "path": "dist/index.modern.js",
      "limit": "3.7 kB"
    }
  ]
}
